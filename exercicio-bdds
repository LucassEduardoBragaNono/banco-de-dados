exercicio

CREATE TABLE usuario(
usu_codigo INT PRIMARY KEY AUTO INCREMENT,
usu_senha CHAR(12),
usu_email VARCHAR(255) UNIQUE,
usu_nivel INT(2),
usu_nome VARCHAR(255)
);

CREATE TABLE livro(
liv_codigo INT PRIMARY KEY AUTO INCREMENT,
fk_autor VARCHAR(255) FOREIGN KEY, 
liv_nome VARCHAR(255),
liv_paginas INT(1000),
liv_editora VARCHAR(255)
);

CREATE TABLE carro(
car_codigo INT PRIMARY KEY AUTO INCREMENT,
car_placa CHAR(7) UNIQUE,
fk_dono VARCHAR(255) FOREIGN KEY,
car_ano VARCHAR(255)
);

CREATE TABLE sala(
sala_codigo INT,
sala_nome VARCHAR(255) UNIQUE,
sala_blocoVARCHAR(255),
fk_disciplina INT(2)
);

ALTER TABLE usuario MODIFY usu_senha CHAR(8);
ALTER TABLE usuario ADD usu_obs VARCHAR(255) NULL;
ALTER TABLE usuario DROP COLUMN usu_nivel;


ALTER TABLE livro CHANGE liv_none liv_titulo VARCHAR(255);
ALTER TABLE livro ADD liv_status TINYINT(1);


INSERT
INTO carro(car_codigo, car_placa, car_ano, fk_dono)
VALUES(1 , '1234567', '2016', 'Lucas'),
(2 , '7654321', '2019', 'Marcos');

ALTER TABLE sala ADD FOREIGN_KEY (fk_disciplina)
REFERENCES(fk_disciplina);
ALTER TABLE sala MODIFY fk_disciplina INT(2) AUTO INCREMENT;

INSERT
INTO sala(sala_codigo, sala_nome, sala_bloco, fk_disciplina)
